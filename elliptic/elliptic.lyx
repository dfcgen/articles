\layout Standard


\begin_inset Formula \begin{equation}
\boxed{\exF{x}{k}=\int\limits _{0}^{x}\frac{dt}{\sqrt{(1-t^{2})(1-k^{2}t^{2})}}}\msp.\label{eq:ellf_def_jacobi}\end{equation}

\end_inset 


