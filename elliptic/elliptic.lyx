\layout Standard


\begin_inset Formula \begin{equation}
\eF{\varphi}{k}=\int\limits _{0}^{x}\frac{dt}{\sqrt{(1-t^{2})(1-k^{2}t^{2})}},\qquad\qquad x=\sin\varphi\label{eq:ellf_def_x}\end{equation}

\end_inset 


\layout Proof

