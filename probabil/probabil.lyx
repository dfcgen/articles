\begin_layout Standard
\begin_inset Formula \begin{align}
\pr(a\leq x\leq b) & =\int_{a}^{b}p(x)\tic x\nonumber \\
 & =\lim_{c\rightarrow-\infty}\left[\int_{c}^{b}p(x)\tic x-\int_{c}^{a}p(x)\tic x\right]\nonumber \\
\pr(a\leq x\leq b) & =F(b)-F(a)\end{align}

\end_inset


\end_layout

