symbol "$p(x)$"
description "Wahrscheinlichkeitsdichte der Zufallsgröße $X$"

\end_inset


\end_layout

\begin_layout Emph(asized)
\begin_inset Formula \begin{equation}
p(x)=\tdiff{F(x)}{x}\label{eq:prob_continuous_differential}\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Die Existenz des uneigentlichen Integrals in Definitionsgleichung\InsetSpace ~

\begin_inset LatexCommand ref
reference "eq:prob_distribution"

\end_inset

