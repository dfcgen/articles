\layout Standard


\begin_inset Formula \begin{align*}
\sigma^{2} & =\int\limits _{u=-\infty}^{\infty}p_{1}(u)\int\limits _{y=-\infty}^{\infty}(y+u)^{2}p_{2}(y)\,\tdc y\,\tdc u-\bar{y}^{2}\\
 & =\int\limits _{u=-\infty}^{\infty}p_{1}(u)\,\left[\:\int\limits _{y=-\infty}^{\infty}y^{2}p_{2}(y)\,\tdc y-2u\int\limits _{y=-\infty}^{\infty}y\, p_{2}(y)\,\tdc y+\int\limits _{y=-\infty}^{\infty}u^{2}p_{2}(y)\,\tdc y\right]\tdc u-\bar{y}^{2}\\
 & =\int\limits _{u=-\infty}^{\infty}p_{1}(u)\,\left(\sigma_{2}^{2}+\bar{x}_{2}^{2}-2u\bar{x}_{2}+u^{2}\right)\,\tdc u-\bar{y}^{2}\\
 & =\sigma_{2}^{2}+\bar{x}_{2}^{2}-2\bar{x}_{1}\bar{x}_{2}+\sigma_{1}^{2}+\bar{x}_{1}^{2}-\left(\bar{x}_{2}+\bar{x}_{1}\right)^{2}=\sigma_{1}^{2}+\sigma_{2}^{2}\end{align*}

\end_inset 


