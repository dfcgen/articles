\layout Standard


\begin_inset Formula \begin{align*}
\tdiff{y}{\varphi} & =-n\sin(n\varphi)\\
 & =-n\sqrt{1-\cos^{2}(n\varphi)}\\
 & =-n\sqrt{1-y^{2}}\end{align*}

\end_inset 


\layout Standard

