\end_layout

\begin_layout Standard
\begin_inset Formula \begin{align*}
\T_{n+1}(x) & =\cos\left[(n+1)\varphi\right]\\
 & =\cos(n\varphi+\varphi)\\
 & =\cos(n\varphi)\cos\varphi-\sin(n\varphi)\sin\varphi\\
 & =x\T_{n}(x)-\sin(n\varphi)\sin\varphi\end{align*}

\end_inset


\end_layout

\begin_layout Standard
